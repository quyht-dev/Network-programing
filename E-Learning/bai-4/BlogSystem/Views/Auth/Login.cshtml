<h2>Login</h2>

@if (ViewData["Error"] != null)
{
    <p style="color:red">@ViewData["Error"]</p>
} else {
    <p style="color: greenyellow">@ViewData["Success"]</p>
}

<form method="post">
    <div>
        <label>Email</label>
        <input name="email" />
    </div>

    <div>
        <label>Password</label>
        <input type="password" name="password" />
    </div>

    <button type="submit">Login</button>
</form>
