<!-- CardGameClient/MainWindow.xaml -->
<Window x:Class="CardGameClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CardGameClient.ViewModels"
        Title="CardGameClient" Height="760" Width="1150"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <!-- Top: Connection / Room -->
        <Border BorderBrush="#444" BorderThickness="1" Padding="10" CornerRadius="6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                    <TextBlock Text="Host:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Width="140" Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,14,0"/>
                    <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Width="80" Text="{Binding PortText, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1">
                    <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Width="150" Text="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,14,0"/>
                    <TextBlock Text="Room:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Width="140" Text="{Binding RoomId, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Left">
                    <Button Content="Connect" Width="110" Margin="0,0,10,0"
                            Click="Connect_Click"
                            IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolToVisibility}, ConverterParameter=IsEnabledHack}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Join" Width="90" Margin="0,0,10,0"
                            Click="Join_Click"
                            IsEnabled="{Binding IsConnected}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="IsEnabled" Value="False"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="IsEnabled" Value="True"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Ready" Width="90" Margin="0,0,10,0"
                            Click="Ready_Click"
                            IsEnabled="{Binding IsInRoom}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="IsEnabled" Value="False"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInRoom}" Value="True">
                                        <Setter Property="IsEnabled" Value="True"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Disconnect" Width="110" Click="Disconnect_Click"
                            IsEnabled="{Binding IsConnected}"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding StatusText}" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ServerInfoText}" Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Middle: Game area -->
        <Grid Grid.Row="1" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: players + turn info -->
            <Border Grid.Column="0" BorderBrush="#444" BorderThickness="1" Padding="10" CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Room State" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding PhaseText}" Margin="0,0,0,10"/>

                    <TextBlock Text="Players:" FontWeight="SemiBold"/>
                    <ItemsControl ItemsSource="{Binding Players}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#333" BorderThickness="1" Padding="6" Margin="0,6,0,0" CornerRadius="6">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Display}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding SubDisplay}" Foreground="Gray"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Separator Margin="0,10,0,10"/>

                    <TextBlock Text="Current Turn:" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentTurnText}" Margin="0,4,0,10"/>

                    <TextBlock Text="Table (Current Trick):" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentTrickText}" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Right: table + hand -->
            <Grid Grid.Column="1" Margin="12,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border BorderBrush="#444" BorderThickness="1" Padding="10" CornerRadius="6">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="Play Selected" Width="140" Margin="0,0,10,0"
                                Click="Play_Click"
                                IsEnabled="{Binding CanPlay}"/>
                        <Button Content="Pass" Width="90" Margin="0,0,10,0"
                                Click="Pass_Click"
                                IsEnabled="{Binding CanPass}"/>
                        <Button Content="Clear Selection" Width="140"
                                Click="ClearSelection_Click"
                                IsEnabled="{Binding HasSelection}"/>

                        <TextBlock Text="{Binding HintText}" Margin="18,0,0,0" VerticalAlignment="Center"
                                   Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- Table cards -->
                <Border Grid.Row="1" BorderBrush="#444" BorderThickness="1" Padding="10" CornerRadius="6" Margin="0,12,0,12">
                    <StackPanel>
                        <TextBlock Text="Cards on Table" FontSize="16" FontWeight="Bold"/>
                        <ItemsControl ItemsSource="{Binding TableCards}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Image Width="72" Height="96" Margin="4"
                                           Source="{Binding ., Converter={StaticResource ImagePathConverter}}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Hand -->
                <Border Grid.Row="2" BorderBrush="#444" BorderThickness="1" Padding="10" CornerRadius="6">
                    <StackPanel>
                        <TextBlock Text="Your Hand (click to select)" FontSize="16" FontWeight="Bold"/>
                        <ItemsControl ItemsSource="{Binding Hand}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="4" CornerRadius="6" BorderThickness="2"
                                            BorderBrush="{Binding BorderBrush}">
                                        <Button Padding="0" BorderThickness="0" Background="Transparent"
                                                Click="Card_Click"
                                                Tag="{Binding}">
                                            <Grid>
                                                <Image Width="72" Height="96"
                                                       Source="{Binding Card, Converter={StaticResource ImagePathConverter}}"/>
                                                <Border Background="#55FFD700" Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibility}}"/>
                                            </Grid>
                                        </Button>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Bottom: log -->
        <Border Grid.Row="2" BorderBrush="#444" BorderThickness="1" Padding="10" CornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Log" FontSize="16" FontWeight="Bold"/>
                <TextBox Grid.Row="1" Text="{Binding LogText, Mode=OneWay}" IsReadOnly="True"
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </Border>
    </Grid>
</Window>
