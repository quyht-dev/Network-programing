<UserControl x:Class="TicTacToe.Client.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/tic-tac-toe-seamless-background-on-dark-blue-illustration-vector.jpg" 
                    Stretch="UniformToFill" 
                    Opacity="0.7"/>
        </Grid.Background>
        <!-- Main container -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Game Title -->
            <TextBlock Text="TIC TAC TOE" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       Foreground="#4CAF50"
                       Background="Cyan"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"
                       Padding="20"
                       FontFamily="Segoe UI"/>

            <!-- Play Button -->
            <Button Content="CHƠI NGAY" 
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="#4CAF50"
                    BorderThickness="0"
                    Width="200"
                    Height="50"
                    Margin="0,0,0,20"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Settings Button -->
            <Button Content="CÀI ĐẶT" 
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Background="#2196F3"
                    BorderThickness="0"
                    Width="180"
                    Height="45"
                    Margin="0,0,0,15"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Exit Button -->
            <Button Content="THOÁT" 
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Background="#F44336"
                    BorderThickness="0"
                    Width="180"
                    Height="45"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Footer -->
            <TextBlock Text="Network Programming Project" 
                       FontSize="12" 
                       Foreground="#888888"
                       HorizontalAlignment="Center"
                       Margin="0,40,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>