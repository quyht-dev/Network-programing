<Window x:Class="CardGameClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CardGameClient"
        Title="Tiến Lên Miền Nam - ZingPlay Style" 
        Height="850" Width="1300"
        WindowStartupLocation="CenterScreen" 
        WindowState="Normal"
        Background="#1B5E20">

    <Window.Resources>
        <local:BoolToOffsetConverter x:Key="BoolToOffsetConverter"/>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform"><Setter.Value><ScaleTransform/></Setter.Value></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="20" BorderThickness="2" BorderBrush="#81C784">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#66BB6A" Offset="0"/>
                                    <GradientStop Color="#2E7D32" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect><DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="5" ShadowDepth="3"/></Border.Effect>
                            <Grid>
                                <Border CornerRadius="18,18,0,0" Height="15" VerticalAlignment="Top" Background="#44FFFFFF" Margin="2"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="border" Property="Background" Value="#4CAF50"/></Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform"><Setter.Value><ScaleTransform ScaleX="0.95" ScaleY="0.95"/></Setter.Value></Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#777"/>
                                <Setter Property="Foreground" Value="#AAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ReadyButtonStyle" TargetType="Button" BasedOn="{StaticResource GlassButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding AmIReady}" Value="True">
                    <Setter Property="Content" Value="HỦY (ĐÃ SS)"/>
                    <Setter Property="Background" Value="#FF9800"/>
                    <Setter Property="BorderBrush" Value="#F57C00"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding AmIReady}" Value="False">
                    <Setter Property="Content" Value="SẴN SÀNG"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HandCardStyle" TargetType="ContentControl">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <TranslateTransform Y="-400"/> <RotateTransform Angle="360"/> <ScaleTransform ScaleX="0.1" ScaleY="0.1"/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.Y)" To="0" Duration="0:0:0.6" DecelerationRatio="0.5"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)" To="0" Duration="0:0:0.6"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.4"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.4"/>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="OpponentTemplate">
            <Grid Width="100" Height="130">
                <Border x:Name="Glow" Background="Transparent" CornerRadius="50" BorderThickness="3" BorderBrush="#FFD700" Visibility="Collapsed">
                    <Border.Effect><DropShadowEffect Color="#FFD700" BlurRadius="15" ShadowDepth="0"/></Border.Effect>
                </Border>
                
                <Border Width="80" Height="80" CornerRadius="40" BorderThickness="2" Background="#222" BorderBrush="#555">
                    <Grid>
                        <TextBlock Text="{Binding Name, StringFormat='{}{0:0}'}" Foreground="#888" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Border Background="#D32F2F" CornerRadius="10" MinWidth="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-5,0,0,0">
                            <TextBlock Text="{Binding HandCount}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11" Padding="4,0"/>
                        </Border>
                    </Grid>
                </Border>
                
                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,25" FontSize="13"/>
            </Grid>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsTurn}" Value="True">
                    <Setter TargetName="Glow" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Ready}" Value="True">
                    <Setter TargetName="Glow" Property="BorderBrush" Value="#00E676"/>
                    <Setter TargetName="Glow" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <DataTemplate x:Key="CardTemplate">
            <Grid Width="95" Height="130" Margin="-50,0,0,0">
                <Grid.Effect><DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.4"/></Grid.Effect>
                <Image Source="{Binding Converter={StaticResource ImagePathConverter}}" Stretch="Uniform"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                <GradientStop Color="#388E3C" Offset="0"/>
                <GradientStop Color="#1B5E20" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="160"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>

        <ContentControl Grid.Row="0" Grid.Column="1" Content="{Binding PlayerTop}" ContentTemplate="{StaticResource OpponentTemplate}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <ContentControl Grid.Row="1" Grid.Column="0" Content="{Binding PlayerLeft}" ContentTemplate="{StaticResource OpponentTemplate}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0"/>
        <ContentControl Grid.Row="1" Grid.Column="2" Content="{Binding PlayerRight}" ContentTemplate="{StaticResource OpponentTemplate}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,30,0"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <TextBlock Text="TIẾN LÊN" FontSize="90" FontWeight="Black" Opacity="0.1" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
            
            <ItemsControl ItemsSource="{Binding TableCards}" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ItemsControl.ItemsPanel><ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate></ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="90" Height="125" Margin="5" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform><ScaleTransform/></Grid.RenderTransform>
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="2" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="2" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Grid.Triggers>
                            <Image Source="{Binding Converter={StaticResource ImagePathConverter}}" Stretch="Uniform"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Border Background="#99000000" VerticalAlignment="Top" HorizontalAlignment="Center" CornerRadius="15" Padding="20,5" Margin="0,-30,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding RoomId}" Foreground="#A5D6A7" FontWeight="Bold"/>
                    <TextBlock Text=" | " Foreground="#555"/>
                    <TextBlock Text="{Binding StatusText}" Foreground="#FFEB3B" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            
            <Border Background="#DDFF5722" CornerRadius="20" Padding="30,10" VerticalAlignment="Bottom" Margin="0,0,0,-60"
                    Visibility="{Binding CanPlay, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="ĐẾN LƯỢT BẠN!" Foreground="White" FontSize="18" FontWeight="Bold">
                    <TextBlock.Effect><DropShadowEffect Color="Black" BlurRadius="5"/></TextBlock.Effect>
                </TextBlock>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Style="{StaticResource ReadyButtonStyle}" Width="140" Height="50" Click="Ready_Click" 
                        Visibility="{Binding IsInRoom, Converter={StaticResource BoolToVis}}" Margin="0,0,0,10"/>
                <Button Content="THOÁT" Width="100" Height="30" Background="#D32F2F" Foreground="White" Click="Disconnect_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <ItemsControl Grid.Column="1" ItemsSource="{Binding Hand}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
                <ItemsControl.ItemsPanel><ItemsPanelTemplate><StackPanel Orientation="Horizontal"/></ItemsPanelTemplate></ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentControl Style="{StaticResource HandCardStyle}">
                            <Button Click="Card_Click" Tag="{Binding}" Background="Transparent" BorderThickness="0" Padding="0">
                                <Button.RenderTransform>
                                    <TranslateTransform Y="{Binding IsSelected, Converter={StaticResource BoolToOffsetConverter}}"/>
                                </Button.RenderTransform>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource CardTemplate}"/>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </ContentControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{Binding HintText}" Foreground="#FFEB3B" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <Button Content="ĐÁNH" Style="{StaticResource GlassButton}" Width="140" Height="60" IsEnabled="{Binding CanPlay}" Click="Play_Click" Margin="0,0,0,10"/>
                <Button Content="BỎ LƯỢT" Width="100" Height="35" Background="#555" Foreground="White" IsEnabled="{Binding CanPass}" Click="Pass_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <Grid x:Name="CountdownOverlay" Visibility="{Binding ShowCountdown, Converter={StaticResource BoolToVis}}" IsHitTestVisible="False">
            <Border Background="#BB000000"/>
            <TextBlock x:Name="TxtCount" Text="" FontSize="160" FontWeight="Black" Foreground="#FFEB3B" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform><ScaleTransform/></TextBlock.RenderTransform>
                <TextBlock.Effect><DropShadowEffect Color="Red" BlurRadius="40"/></TextBlock.Effect>
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Visibility, ElementName=CountdownOverlay}" Value="Visible">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Text" Duration="0:0:4">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="3"/>
                                                <DiscreteObjectKeyFrame KeyTime="0:0:1" Value="2"/>
                                                <DiscreteObjectKeyFrame KeyTime="0:0:2" Value="1"/>
                                                <DiscreteObjectKeyFrame KeyTime="0:0:3" Value="CHIẾN!"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="0.5" To="1.5" Duration="0:0:1" RepeatBehavior="4x"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="0.5" To="1.5" Duration="0:0:1" RepeatBehavior="4x"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

    </Grid>
</Window>