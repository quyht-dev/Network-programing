<Window x:Class="CardGameClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CardGameClient"
        Title="Tiến Lên Miền Nam - ZingPlay Style" 
        Height="850" Width="1300"
        WindowStartupLocation="CenterScreen" 
        WindowState="Normal"
        Background="#1B5E20">

    <Window.Resources>
        <local:BoolToOffsetConverter x:Key="BoolToOffsetConverter"/>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <ControlTemplate x:Key="GreenButtonTemplate" TargetType="Button">
            <Border x:Name="border" CornerRadius="20" BorderThickness="2" BorderBrush="#81C784">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1"><GradientStop Color="#66BB6A" Offset="0"/><GradientStop Color="#2E7D32" Offset="1"/></LinearGradientBrush>
                </Border.Background>
                <Border.Effect><DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="5" ShadowDepth="3" Direction="270"/></Border.Effect>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="border" Property="Background" Value="#4CAF50"/></Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform"><Setter.Value><ScaleTransform ScaleX="0.95" ScaleY="0.95"/></Setter.Value></Setter>
                    <Setter TargetName="border" Property="Background" Value="#1B5E20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <ControlTemplate x:Key="OrangeButtonTemplate" TargetType="Button">
            <Border x:Name="border" CornerRadius="20" BorderThickness="2" BorderBrush="#FFB74D">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1"><GradientStop Color="#FFA726" Offset="0"/><GradientStop Color="#EF6C00" Offset="1"/></LinearGradientBrush>
                </Border.Background>
                <Border.Effect><DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="5" ShadowDepth="3"/></Border.Effect>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="border" Property="Background" Value="#FFB74D"/></Trigger>
                <Trigger Property="IsPressed" Value="True"><Setter Property="RenderTransform"><Setter.Value><ScaleTransform ScaleX="0.95" ScaleY="0.95"/></Setter.Value></Setter><Setter TargetName="border" Property="Background" Value="#E65100"/></Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <ControlTemplate x:Key="RedButtonTemplate" TargetType="Button">
            <Border x:Name="border" CornerRadius="20" BorderThickness="2" BorderBrush="#E57373">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1"><GradientStop Color="#EF5350" Offset="0"/><GradientStop Color="#C62828" Offset="1"/></LinearGradientBrush>
                </Border.Background>
                <Border.Effect><DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="5" ShadowDepth="3"/></Border.Effect>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="border" Property="Background" Value="#E57373"/></Trigger>
                <Trigger Property="IsPressed" Value="True"><Setter Property="RenderTransform"><Setter.Value><ScaleTransform ScaleX="0.95" ScaleY="0.95"/></Setter.Value></Setter><Setter TargetName="border" Property="Background" Value="#B71C1C"/></Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="PhysicsButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform"><Setter.Value><ScaleTransform/></Setter.Value></Setter>
            <Setter Property="Template" Value="{StaticResource GreenButtonTemplate}"/>
        </Style>

        <Style x:Key="OrangeButton" TargetType="Button" BasedOn="{StaticResource PhysicsButton}"><Setter Property="Template" Value="{StaticResource OrangeButtonTemplate}"/></Style>
        <Style x:Key="RedButton" TargetType="Button" BasedOn="{StaticResource PhysicsButton}"><Setter Property="Template" Value="{StaticResource RedButtonTemplate}"/></Style>

        <Style x:Key="ReadyButtonStyle" TargetType="Button" BasedOn="{StaticResource PhysicsButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding AmIReady}" Value="True">
                    <Setter Property="Content" Value="HỦY"/>
                    <Setter Property="Template" Value="{StaticResource OrangeButtonTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding AmIReady}" Value="False">
                    <Setter Property="Content" Value="SẴN SÀNG"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HandCardStyle" TargetType="ContentControl">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform"><Setter.Value><TransformGroup><TranslateTransform Y="-400"/><RotateTransform Angle="360"/><ScaleTransform ScaleX="0.1" ScaleY="0.1"/></TransformGroup></Setter.Value></Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.Y)" To="0" Duration="0:0:0.6"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.4"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.4"/>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="OpponentTemplate">
            <Grid Width="100" Height="130">
                <Border x:Name="Glow" Background="Transparent" CornerRadius="50" BorderThickness="3" BorderBrush="#FFD700" Visibility="Collapsed">
                    <Border.Effect><DropShadowEffect Color="#FFD700" BlurRadius="15"/></Border.Effect>
                </Border>
                <Border Width="80" Height="80" CornerRadius="40" BorderThickness="2" Background="#263238" BorderBrush="#546E7A">
                    <Grid>
                        <TextBlock Text="{Binding Name, StringFormat='{}{0:0}'}" Foreground="#B0BEC5" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Border Background="#D32F2F" CornerRadius="10" MinWidth="26" Height="26" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-5,0,0,0" BorderBrush="White" BorderThickness="1">
                            <TextBlock Text="{Binding HandCount}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Padding="4,0"/>
                        </Border>
                    </Grid>
                </Border>
                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,25" FontSize="14"/>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsTurn}" Value="True"><Setter TargetName="Glow" Property="Visibility" Value="Visible"/></DataTrigger>
                <DataTrigger Binding="{Binding Ready}" Value="True"><Setter TargetName="Glow" Property="BorderBrush" Value="#00E676"/><Setter TargetName="Glow" Property="Visibility" Value="Visible"/></DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <DataTemplate x:Key="CardTemplate">
            <Grid Width="100" Height="135" Margin="-60,0,0,0">
                <Grid.Effect><DropShadowEffect BlurRadius="5" ShadowDepth="3" Opacity="0.5"/></Grid.Effect>
                <Image Source="{Binding Converter={StaticResource ImagePathConverter}}" Stretch="Uniform"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                <GradientStop Color="#43A047" Offset="0"/>
                <GradientStop Color="#1B5E20" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="160"/> <RowDefinition Height="*"/> <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/> <ColumnDefinition Width="*"/> <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <ContentControl Grid.Row="0" Grid.Column="1" Content="{Binding PlayerTop}" ContentTemplate="{StaticResource OpponentTemplate}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <ContentControl Grid.Row="1" Grid.Column="0" Content="{Binding PlayerLeft}" ContentTemplate="{StaticResource OpponentTemplate}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
        <ContentControl Grid.Row="1" Grid.Column="2" Content="{Binding PlayerRight}" ContentTemplate="{StaticResource OpponentTemplate}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <TextBlock Text="TIẾN LÊN" FontSize="100" FontWeight="Black" Foreground="White" Opacity="0.08" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
            
            <ItemsControl ItemsSource="{Binding TableCards}" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ItemsControl.ItemsPanel><ItemsPanelTemplate><StackPanel Orientation="Horizontal"/></ItemsPanelTemplate></ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="100" Height="135" Margin="-60,0,0,0" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform><ScaleTransform/></Grid.RenderTransform>
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="1.5" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="1.5" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.1"/>
                                            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="-60,0,0,0" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Grid.Triggers>
                            <Image Source="{Binding Converter={StaticResource ImagePathConverter}}" Stretch="Uniform"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Border Background="#88000000" VerticalAlignment="Top" HorizontalAlignment="Center" CornerRadius="10" Padding="15,5" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding RoomId}" Foreground="#A5D6A7" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock Text="|" Foreground="#777" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding StatusText}" Foreground="#FFEB3B" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            
            <Border Background="#CCFF5722" CornerRadius="15" Padding="20,8" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,200,0,0"
                    Visibility="{Binding CanPlay, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="LƯỢT CỦA BẠN" Foreground="White" FontSize="16" FontWeight="Bold">
                    <TextBlock.Effect><DropShadowEffect Color="Black" BlurRadius="5"/></TextBlock.Effect>
                </TextBlock>
            </Border>

            <TextBlock Text="" FontSize="140" FontWeight="Bold" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Visibility="{Binding ShowCountdown, Converter={StaticResource BoolToVis}}" IsHitTestVisible="False">
                <TextBlock.Effect><DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="4" Opacity="0.8"/></TextBlock.Effect>
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowCountdown}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Text" Duration="0:0:4">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="3"/>
                                                <DiscreteObjectKeyFrame KeyTime="0:0:1" Value="2"/>
                                                <DiscreteObjectKeyFrame KeyTime="0:0:2" Value="1"/>
                                                <DiscreteObjectKeyFrame KeyTime="0:0:3" Value="CHIẾN!"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/> <ColumnDefinition Width="*"/> <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Style="{StaticResource ReadyButtonStyle}" Width="130" Height="45" Click="Ready_Click" 
                        Visibility="{Binding IsInRoom, Converter={StaticResource BoolToVis}}" Margin="0,0,0,10"/>
                
                <Button Content="CHƠI LẠI" Style="{StaticResource OrangeButton}" Width="100" Height="30" Margin="0,0,0,10" Click="RequestReset_Click"/>
                <Button Content="THOÁT" Style="{StaticResource RedButton}" Width="100" Height="30" Click="Disconnect_Click"/>
            </StackPanel>

            <ItemsControl Grid.Column="1" ItemsSource="{Binding Hand}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,15">
                <ItemsControl.ItemsPanel><ItemsPanelTemplate><StackPanel Orientation="Horizontal"/></ItemsPanelTemplate></ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentControl Style="{StaticResource HandCardStyle}">
                            <Button Click="Card_Click" Tag="{Binding}" Background="Transparent" BorderThickness="0" Padding="0">
                                <Button.RenderTransform><TranslateTransform Y="{Binding IsSelected, Converter={StaticResource BoolToOffsetConverter}}"/></Button.RenderTransform>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource CardTemplate}"/>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </ContentControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="ĐÁNH" Style="{StaticResource PhysicsButton}" Width="140" Height="60" IsEnabled="{Binding CanPlay}" Click="Play_Click" Margin="0,0,0,10"/>
                <Button Content="BỎ LƯỢT" Style="{StaticResource PhysicsButton}" Width="100" Height="35" Background="#546E7A" IsEnabled="{Binding CanPass}" Click="Pass_Click"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="ResetOverlay" Visibility="{Binding ShowResetAlert, Converter={StaticResource BoolToVis}}" IsHitTestVisible="True">
            <Border Background="#99000000"/>
            <Border Width="420" Height="220" Background="White" CornerRadius="20" BorderBrush="#FFA000" BorderThickness="3">
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="YÊU CẦU CHƠI LẠI" FontSize="22" FontWeight="Bold" Foreground="#D84315" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="{Binding ResetRequesterName}" FontWeight="Bold" Foreground="#2E7D32" FontSize="18"/>
                            <TextBlock Text=" muốn hủy ván này." FontSize="18" Foreground="#444"/>
                        </StackPanel>
                        <TextBlock Text="Bạn có đồng ý không?" FontSize="16" Foreground="#666" HorizontalAlignment="Center" Margin="0,0,0,25"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="ĐỒNG Ý" Style="{StaticResource PhysicsButton}" Width="110" Height="40" Margin="0,0,20,0" Click="AcceptReset_Click"/>
                            <Button Content="KHÔNG" Style="{StaticResource RedButton}" Width="110" Height="40" Click="DeclineReset_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>