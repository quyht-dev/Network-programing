<Window x:Class="CardGameClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tiến Lên Miền Nam - Login" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#121212" ResizeMode="NoResize">
    
    <Border Padding="30">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="TIẾN LÊN" Foreground="#FFC107" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="MIỀN NAM" Foreground="White" FontSize="24" FontWeight="Light" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Tên của bạn:" Foreground="#AAAAAA" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtName" Height="35" FontSize="16" Padding="5" Text="Player"/>

            <TextBlock Text="Mã phòng:" Foreground="#AAAAAA" Margin="0,15,0,5"/>
            <TextBox x:Name="TxtRoom" Height="35" FontSize="16" Padding="5" Text="ROOM-1"/>

            <TextBlock Text="Server URL (Ngrok):" Foreground="#555555" Margin="0,15,0,5"/>
            <TextBox x:Name="TxtUrl" Height="30" FontSize="12" Padding="5" Foreground="Gray"
                     Text="https://jayda-sulfuric-medially.ngrok-free.dev/gameHub"/>

            <Button Content="VÀO BÀN CHƠI" Height="45" Margin="0,30,0,0"
                    Background="#D32F2F" Foreground="White" FontSize="16" FontWeight="Bold"
                    Click="BtnEnter_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Border>
</Window>