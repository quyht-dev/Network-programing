<UserControl x:Class="TicTacToe.Client.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Button bo góc chuẩn -->
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding Tag}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/tic-tac-toe-seamless-background-on-dark-blue-illustration-vector.jpg" 
                        Stretch="UniformToFill" 
                        Opacity="0.7"/>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="TIC TAC TOE" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       Foreground="#4CAF50"
                       Background="Cyan"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"
                       Padding="20"
                       FontFamily="Segoe UI"/>

            <!-- Play Button -->
            <Button Content="CHƠI NGAY"
                    Click="Play_Click"
                    Style="{StaticResource RoundButtonStyle}"
                    Tag="8"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="#4CAF50"
                    Width="200"
                    Height="50"
                    Margin="0,0,0,20"/>

            <!-- Settings Button (chưa làm thì để tạm) -->
            <Button Content="CÀI ĐẶT"
                    Style="{StaticResource RoundButtonStyle}"
                    Tag="6"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#2196F3"
                    Width="180"
                    Height="45"
                    Margin="0,0,0,15"/>

            <!-- Exit Button -->
            <Button Content="THOÁT"
                    Click="Exit_Click"
                    Style="{StaticResource RoundButtonStyle}"
                    Tag="6"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#F44336"
                    Width="180"
                    Height="45"/>

            <TextBlock Text="Network Programming Project" 
                       FontSize="12" 
                       Foreground="#888888"
                       HorizontalAlignment="Center"
                       Margin="0,40,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
